{
  "version": 2,
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Capçalera"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Peu de pàgina"
    },
    {
      "area": "uncategorized",
      "name": "aside",
      "title": "Anuncis"
    }
  ],
  "customTemplates": [
    {
      "name": "single-advertiser",
      "title": "Anunciant",
      "postTypes": ["advertiser"]
    },
    {
      "name": "archive-advertiser",
      "title": "Anunciants",
      "postTypes": ["advertiser"]
    },
    {
      "name": "single-publication",
      "title": "Publicació",
      "postTypes": ["publication"]
    },
    {
      "name": "archive-publication",
      "title": "Publicacions",
      "postTypes": ["publications"]
    }
  ],
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        {
          "name": "Base",
          "slug": "base",
          "color": "#FFFFFF"
        },
        {
          "name": "Typography",
          "slug": "typography",
          "color": "#354555"
        },
        {
          "name": "Brand",
          "slug": "brand",
          "color": "#74AF27"
        },
        {
          "name": "Brand Light",
          "slug": "brand-light",
          "color": "#daebc3"
        },
        {
          "name": "Main",
          "slug": "main",
          "color": "#354555"
        },
        {
          "name": "MainContrast",
          "slug": "main-contrast",
          "color": "#F9F9F9"
        }
      ]
    },
    "custom": {
      "fontWeight": {
        "thin": 100,
        "extra-light": 200,
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semi-bold": 600,
        "bold": 700,
        "extra-bold": 800,
        "black": 900
      },
      "lineHeight": {
        "one": 1,
        "heading": 1.2,
        "body": 1.5
      },
      "spacing": {
        "minimal": "2px",
        "xxs": "10px",
        "xs": "20px",
        "m": "25px",
        "l": "30px",
        "xl": "40px",
        "xxl": "60px",
        "spacer": "100px"
      }
    },
    "layout": {
      "contentSize": "860px",
      "wideSize": "100vw"
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "name": "1",
          "size": "1rem",
          "slug": "10"
        },
        {
          "name": "2",
          "size": "min(2rem, 2vw)",
          "slug": "20"
        },
        {
          "name": "3",
          "size": "min(3.5rem, 3vw)",
          "slug": "30"
        },
        {
          "name": "4",
          "size": "min(5rem, 5vw)",
          "slug": "40"
        },
        {
          "name": "5",
          "size": "min(7rem, 8vw)",
          "slug": "50"
        },
        {
          "name": "6",
          "size": "min(12rem, 13vw)",
          "slug": "60"
        }
      ],

      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "'Adelle', serif",
          "name": "Adelle",
          "slug": "adelle"
        }
      ],
      "fontSizes": [
        {
          "fluid": false,
          "name": "xSmall",
          "slug": "x-small",
          "size": "0.88rem"
        },
        {
          "fluid": false,
          "name": "Small",
          "slug": "small",
          "size": "1rem"
        },
        {
          "fluid": false,
          "name": "Medium",
          "slug": "medium",
          "size": "1.33rem"
        },
        {
          "fluid": {
            "min": "1.33rem",
            "max": "1.55rem"
          },
          "name": "Large",
          "slug": "large",
          "size": "1.55rem"
        },
        {
          "fluid": {
            "min": "1.55rem",
            "max": "1.66rem"
          },
          "name": "xLarge",
          "slug": "x-large",
          "size": "1.66rem"
        },
        {
          "fluid": {
            "min": "1.66rem",
            "max": "2.77rem"
          },
          "name": "xxLarge",
          "slug": "xx-large",
          "size": "2.77rem"
        },
        {
          "fluid": {
            "min": "2.77rem",
            "max": "3.27rem"
          },
          "name": "xxxLarge",
          "slug": "xxx-large",
          "size": "3.27rem"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/button": {
        "border": {
          "radius": "0px"
        },
        "color": {
          "background": "var(--wp--preset--color--main)",
          "text": "var(--wp--preset--color--brand)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--xxs)",
            "right": "var(--wp--custom--spacing--xl)",
            "bottom": "var(--wp--custom--spacing--xxs)",
            "left": "var(--wp--custom--spacing--xl)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--adelle)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "var(--wp--custom--font-weight--semi-bold)"
        }
      },
      "core/calendar": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "core/code": {
        "border": {
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--main)",
          "text": "var(--wp--preset--color--main-contrast)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--m)",
            "right": "var(--wp--custom--spacing--l)",
            "bottom": "var(--wp--custom--spacing--m)",
            "left": "var(--wp--custom--spacing--l)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--monospace)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/columns": {
        "spacing": {
          "margin": {
            "bottom": "0px"
          }
        }
      },
      "core/cover": {
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--l)",
            "right": "var(--wp--custom--spacing--l)",
            "bottom": "var(--wp--custom--spacing--l)",
            "left": "var(--wp--custom--spacing--l)"
          }
        }
      },
      "core/group": {
        "spacing": {
          "padding": "0px"
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "var(--wp--custom--spacing--xs)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--adelle)",
          "fontWeight": "var(--wp--custom--font-weight--bold)"
        },
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--l)"
          }
        }
      },
      "core/navigation": {
        "typography": {
          "fontFamily": "Lato, sans-serif",
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "var(--wp--custom--line-height--one)",
          "fontWeight": "var(--wp--custom--font-weight--medium)"
        },
        "color": {
          "text": "var(--wp--preset--color--typography)"
        }
      },
      "core/paragraph": {
        "typography": {
          "fontFamily": "Lato, sans-serif"
        },
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "var(--wp--custom--spacing--l)"
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)"
        }
      },
      "core/preformatted": {
        "border": {
          "color": "var(--wp--preset--color--main)",
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--main)",
          "text": "var(--wp--preset--color--main-contrast)"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--m)",
            "right": "var(--wp--custom--spacing--l)",
            "bottom": "var(--wp--custom--spacing--m)",
            "left": "var(--wp--custom--spacing--l)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--adelle)",
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "core/pullquote": {
        "border": {
          "color": "var(--wp--preset--color--main)",
          "style": "solid",
          "width": "1px"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--l)",
            "right": "var(--wp--custom--spacing--l)",
            "bottom": "var(--wp--custom--spacing--l)",
            "left": "var(--wp--custom--spacing--l)"
          }
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--secondary)",
          "style": "solid !important",
          "width": "1px !important"
        },
        "spacing": {
          "margin": {
            "bottom": "35px"
          },
          "padding": {
            "top": "var(--wp--custom--spacing--l)",
            "right": "clamp(var(--wp--custom--spacing--xs), 3vw, var(--wp--custom--spacing--xl)) !important",
            "bottom": "var(--wp--custom--spacing--l)",
            "left": "clamp(var(--wp--custom--spacing--xs), 3vw, var(--wp--custom--spacing--xl)) !important"
          }
        },
        "typography": {
          "lineHeight": "var(--wp--custom--line-height--body)",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/list": {
        "color": {
          "text": "var(--wp--preset--color--typography)"
        }
      },
      "core/spacer": {
        "spacing": {
          "margin": {
            "top": "0 !important"
          }
        }
      },
      "core/separator": {
        "color": {
          "text": "var(--wp--preset--color--main)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "core/site-tagline": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--custom--spacing--xs)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "var(--wp--custom--font-weight--bold)",
          "lineHeight": "var(--wp--custom--line-height--one)",
          "textTransform": "uppercase"
        }
      },
      "core/table": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "core/template-part": {
        "spacing": {
          "margin": {
            "top": "0px"
          }
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--typography)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "var(--wp--custom--font-weight--bold)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "var(--wp--custom--font-weight--bold)",
          "lineHeight": "var(--wp--custom--line-height--heading)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--brand)"
        },
        "typography": {
          "textDecoration": "none"
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--custom--spacing--l)",
      "padding": {
        "top": "0px",
        "right": "var(--wp--preset--spacing--40)",
        "bottom": "0px",
        "left": "var(--wp--preset--spacing--40)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--adelle)",
      "fontSize": "var(--wp--preset--font-size--small)",
      "fontWeight": "var(--wp--custom--font-weight--regular)",
      "lineHeight": "var(--wp--custom--line-height--body)"
    }
  }
}
